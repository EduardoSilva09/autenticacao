<%- include("top.ejs") %>
    <div class="col-sm-6">
        <form action="/login" method="post">
            <div class="form-group">
                <label for="username">Username:</label>
                <input id="username" name="username" type="text" class="form-control" placeholder="Digite seu username"><br />
            </div>
            <div class="form-group"></div>
                <label for="password">Password</label>
                <input id="password" name="password" type="password" class="form-control" placeholder="Digite seu password"><br />
            </div>
            <input type="submit" value="Login" class="btn btn-primary"><br />
        </form>
        <hr />
        <% if(message) { %>
            <p>
            <% if(error) { %>
                <label style="color: red;"> <%= message %> </label>
            <% } else { %>
                <label style="color: green;"> <%= message %> </label>
            <% } %>
            </p>
        <% } %>
        <p>
            <a href="/users/forgot">Esqueceu a senha</a> | <a href="/users/signup">NÃ£o possui cadastro?</a>
        </p>
    </div>
<%- include("bottom.ejs") %>